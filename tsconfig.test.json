{
  "version": "2.3.2",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "pretty": true,
    "outDir": ".test",
    "lib": [ "es7" ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/moment",
      "lib"
    ],
    "types": [
      "mocha"
    ]
  },
  "include": [
    "test"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}